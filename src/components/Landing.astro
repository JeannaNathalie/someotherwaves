---
import Knap from "../components/Knap.astro";
---

<div>
  <h1>SOME OTHER WAVES</h1>
  <p>Evighedskunst på vægge og loft</p>
  <img class="opacity" src="../gallery/sow9-crop.webp" alt="Maleri" />
  <div class="knap">
    <Knap link="kontakt" size="small" text="BESTIL" />
  </div>
  <div class="arrow"></div>
</div>

<div class="video">
  <video src="../someotherwaves_2.mp4" autoplay controls loop> Your browser does not support the video tag.</video>
</div>

<style>
  .knap {
    margin-top: 15rem;
    position: absolute;
    z-index: 4;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  /* @media screen (max-width: 800px) { */
  .arrow {
    top: 89%;
    position: absolute;
    z-index: 3;
    width: 30px;
    height: 30px;
    border-top: 4px solid rgb(255, 255, 255);
    border-right: 4px solid rgb(255, 255, 255);
    border-radius: 4px;
    transform: translateX(-50%) rotate(136deg);
    animation: arrowAnimation 1s infinite alternate;
  }

  @keyframes arrowAnimation {
    0% {
      transform: translateX(-50%) rotate(136deg) translateY(0);
    }
    50% {
      transform: translateX(-50%) rotate(136deg) translateY(-5px);
    }
    100% {
      transform: translateX(-50%) rotate(136deg) translateY(0);
    }
  }
  img {
    max-width: 100vw;
  }

  .opacity {
    opacity: 80%;
  }

  h1 {
    position: absolute;
    z-index: 1;
    font-family: "moret", serif;
    font-weight: 400;
    font-size: 7vw;
    font-style: normal;
    color: rgb(255, 255, 255);
    margin-top: -10rem;
  }

  p {
    position: absolute;
    z-index: 1;
    font-family: "graphie", sans-serif;
    font-style: normal;
    font-size: 2.5rem;
    font-weight: 400;
    /* font-family: "moret", serif; */
    /* font-weight: 100;
    font-size: 3vw; */
    /* font-style: normal; */
    color: rgb(255, 255, 255);
    padding-top: 10rem;
    margin-top: -10rem;
  }

  video {
    max-width: 75vw;
    margin-top: 2em;
    margin-bottom: 3em;
    height: 650px;
  }
  div {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .button:hover {
    opacity: 90%;
  }

  @media (max-width: 800px) {
    .arrow {
      display: none;
    }
    img {
      max-width: 100%;
    }
    h1 {
      position: absolute;
      z-index: 1;
      font-family: "moret", serif;
      font-weight: 400;
      font-size: 10vw;
      font-style: normal;
      color: rgb(255, 255, 255);
      margin-top: -2rem;
    }

    p {
      padding-top: 5rem;
      font-size: 5vw;
      margin-top: -2rem;
    }
    video {
      max-width: 93vw;
      margin-top: 2em;
      margin-bottom: 3em;
    }

    .knap {
      margin-top: 10rem;
    }
  }
</style>
